{
  "name": "bookmark-manager",
  "displayName": "Bookmark Manager (BM)",
  "description": "Simple and easy to use bookmark manager",
  "version": "0.0.12",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bookmark",
    "bookmark manager",
    "bookmarks",
    "manager"
  ],
  "publisher": "czfadmin",
  "author": "czfadmin",
  "homepage": "https://github.com/czfadmin/bookmarks",
  "repository": {
    "url": "https://github.com/czfadmin/bookmarks"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/czfadmin/bookmarks/issues"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "./logo.png",
  "contributes": {
    "commands": [
      {
        "command": "bookmark-manager.toggleLineBookmark",
        "title": "Toggle line bookmark",
        "icon": "$(bookmark)",
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.toggleLineBookmarkWithLabel",
        "title": "Toggle bookmark with label",
        "icon": "$(bookmark)",
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.toggleLineBookmarkWithColor",
        "title": "Toggle line bookmark with color",
        "icon": "$(bookmark)",
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.toggleBookmarkWithSelection",
        "title": "Toggle bookmark with selections",
        "icon": "$(bookmark)",
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.bookmarkEditDescription",
        "title": "Edit description",
        "icon": "$(bookmark)",
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.clearAllBookmarksInCurrentFile",
        "title": "Clear all bookmarks in current file",
        "icon": "$(bookmark)",
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.changeBookmarkColor",
        "title": "Change color",
        "icon": "$(bookmark)",
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.clearAllBookmarks",
        "title": "Clear All bookmarks",
        "icon": {
          "light": "resources/light/clearAll.svg",
          "dark": "resources/dark/clearAll.svg"
        },
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.deleteBookmark",
        "title": "Delete",
        "icon": {
          "light": "resources/light/close.svg",
          "dark": "resources/dark/close.svg"
        },
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.editLabel",
        "title": "Edit label",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        },
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.gotoSourceLocation",
        "title": "Go to locations",
        "icon": {
          "light": "resources/light/location.svg",
          "dark": "resources/dark/location.svg"
        },
        "category": "Bookmark Manager (BM)"
      },
      {
        "command": "bookmark-manager.quickJumpTo",
        "title": "Quickly jump to bookmark",
        "icon": "$(bookmark)",
        "category": "Bookmark Manager (BM)"
      }
    ],
    "views": {
      "bookmark-manager": [
        {
          "id": "bookmark-manager",
          "name": "Bookmark Manager",
          "icon": "resources/logo.svg",
          "contextualTitle": "Bookmarks"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "bookmark-manager",
        "contents": "Add some bookmarks"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bookmark-manager",
          "title": "Bookmark Manager",
          "icon": "resources/logo.svg"
        }
      ],
      "panel": [
        {
          "id": "bookmark-manager",
          "title": "Bookmark Manager",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "configuration": {
      "title": "Bookmark Manager (BM)",
      "properties": {
        "bookmark-manager.showGutterInOverviewRuler": {
          "type": "boolean",
          "description": "Whether to display the corresponding position of the bookmark on the overview ruler",
          "default": false
        },
        "bookmark-manager.alwaysUseDefaultColor": {
          "type": "boolean",
          "description": "一直使用默认的颜色装饰书签图标",
          "default": false
        },
        "bookmark-manager.relativePath": {
          "type": "boolean",
          "description": "书签列表使用相对路径",
          "default": true
        },
        "bookmark-manager.showTextDecoration": {
          "type": "boolean",
          "description": "Whether to display the text decoration of the bookmark's location",
          "default": true
        },
        "bookmark-manager.showGutterIcon": {
          "type": "boolean",
          "description": "Whether to display the gutter icon of the bookmark",
          "default": true
        },
        "bookmark-manager.highlightBackground": {
          "type": "boolean",
          "description": "使用书签颜色高亮书签所在区域或行的背景色",
          "default": false
        },
        "bookmark-manager.showBorder": {
          "type": "boolean",
          "description": "显示书签边框(Border)",
          "default": false
        },
        "bookmark-manager.border": {
          "type": "string",
          "description": "自定义边框样式. 注意: 边框颜色默认为书签颜色",
          "default": ""
        },
        "bookmark-manager.showOutline": {
          "type": "boolean",
          "description": "显示书签轮廓(Outline)",
          "default": false
        },
        "bookmark-manager.outline": {
          "type": "string",
          "description": "自定义轮廓样式. 注意: 轮廓颜色默认为书签颜色",
          "default": ""
        },
        "bookmark-manager.wholeLine": {
          "type": "boolean",
          "description": "是否选择整行",
          "default": false
        },
        "bookmark-manager.textDecorationLine": {
          "type": "string",
          "description": "设置使用的装饰类型，例如 `underline` 或者 `line-through`。",
          "default": "underline"
        },
        "bookmark-manager.textDecorationStyle": {
          "type": "string",
          "description": "设置装饰的线条的颜色，例如 `solid`、`wavy` 或者 `dashed`。",
          "default": "wavy"
        },
        "bookmark-manager.textDecorationThickness": {
          "type": "string",
          "description": "设置用于装饰的线条粗细",
          "default": "auto"
        },
        "bookmark-manager.lineBlame": {
          "type": "boolean",
          "description": "是否跟随鼠标位置显示书签信息",
          "default": false
        },
        "bookmark-manager.fontWeight": {
          "type": "string",
          "default": "bold",
          "description": "书签字体权重",
          "enum": [
            "normal",
            "bold",
            "bolder",
            "unset"
          ]
        },
        "bookmark-manager.colors": {
          "type": "object",
          "description": "Custom bookmark color, object format: {\" name\": \"value\"}",
          "additionalProperties": {
            "type": "string"
          }
        },
        "bookmark-manager.defaultBookmarkIconColor": {
          "type": "string",
          "description": "The default color of bookmark icon.",
          "default": "#0e69d8"
        }
      }
    },
    "configurationDefaults": {
      "bookmark-manager.colors": {
        "red": "red",
        "green": "green",
        "blue": "blue",
        "white": "white",
        "yellow": "yellow",
        "orange": "orange",
        "purple": "purple",
        "black": "black"
      }
    },
    "menus": {
      "editor/context": [
        {
          "submenu": "bookmark-manager"
        }
      ],
      "editor/lineNumber/context": [
        {
          "submenu": "bookmark-manager"
        }
      ],
      "bookmark-manager": [
        {
          "command": "bookmark-manager.toggleLineBookmark",
          "group": "bookmarksActionsGroup@1"
        },
        {
          "command": "bookmark-manager.toggleBookmarkWithSelection",
          "group": "bookmarksActionsGroup@2"
        },
        {
          "command": "bookmark-manager.editLabel",
          "group": "bookmarksEditActionGroup@1"
        },
        {
          "command": "bookmark-manager.changeBookmarkColor",
          "group": "bookmarksEditActionGroup@2"
        },
        {
          "command": "bookmark-manager.bookmarkEditDescription",
          "group": "bookmarksEditActionGroup@3"
        },
        {
          "command": "bookmark-manager.deleteBookmark",
          "group": "bookmarksEditActionGroup@4"
        }
      ],
      "view/title": [
        {
          "command": "bookmark-manager.clearAllBookmarks",
          "when": "view == bookmark-manager",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "bookmark-manager.gotoSourceLocation",
          "when": "view == bookmark-manager && viewItem === item",
          "group": "inline@1"
        },
        {
          "command": "bookmark-manager.editLabel",
          "when": "view==bookmark-manager && viewItem === item",
          "group": "inline@2"
        },
        {
          "command": "bookmark-manager.deleteBookmark",
          "when": "view==bookmark-manager && viewItem === item",
          "group": "inline@3"
        },
        {
          "command": "bookmark-manager.clearAllBookmarks",
          "when": "view == bookmark-manager && viewItem === file",
          "group": "inline@2"
        },
        {
          "command": "bookmark-manager.bookmarkEditDescription",
          "when": "view==bookmark-manager && viewItem === item",
          "group": "itemContextGroup@1"
        },
        {
          "command": "bookmark-manager.changeBookmarkColor",
          "when": "view==bookmark-manager && viewItem === item",
          "group": "itemContextGroup@2"
        }
      ],
      "commandPalette": [
        {
          "command": "bookmark-manager.toggleBookmarkWithSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "submenus": [
      {
        "id": "bookmark-manager",
        "label": "Bookmark Manager"
      }
    ],
    "keybindings": {
      "command": "bookmark-manager.focus",
      "key": "ctrl+m ctrl+b",
      "mac": "cmd+m cmd+b"
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "version": "changeset version",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "prettier": "prettier --fix  -w  ./src/**/*.{js,ts} ",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.199",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/uuid": "^9.0.4",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.2",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}