{
  "name": "bookmarks",
  "displayName": "bookmarks",
  "description": "bookmark",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "czfadmin",
  "author": "czfadmin",
  "homepage": "https://github.com/czfadmin/bookmarks",
  "repository": {
    "url": "https://github.com/czfadmin/bookmarks"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/czfadmin/bookmarks/issues"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bookmarks.toggleLineBookmark",
        "title": "Toggle line bookmark",
        "icon": "$(bookmark)",
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.toggleLineBookmarkWithLabel",
        "title": "Toggle bookmark with label",
        "icon": "$(bookmark)",
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.toggleLineBookmarkWithColor",
        "title": "Toggle line bookmark with color",
        "icon": "$(bookmark)",
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.toggleBookmarkWithSelections",
        "title": "Toggle bookmark with selections",
        "icon": "$(bookmark)",
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.bookmarkEditDescription",
        "title": "Edit description",
        "icon": "$(bookmark)",
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.clearAllBookmarksInCurrentFile",
        "title": "Clear all bookmarks in current file",
        "icon": "$(bookmark)",
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.changeBookmarkColor",
        "title": "Change color",
        "icon": "$(bookmark)",
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.clearAllBookmarks",
        "title": "Clear All bookmarks",
        "icon": {
          "light": "resources/light/clearAll.svg",
          "dark": "resources/dark/clearAll.svg"
        },
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.deleteBookmark",
        "title": "Delete",
        "icon": {
          "light": "resources/light/close.svg",
          "dark": "resources/dark/close.svg"
        },
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.editLabel",
        "title": "Edit label",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        },
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.gotoSourceLocation",
        "title": "Go to locations",
        "icon": {
          "light": "resources/light/location.svg",
          "dark": "resources/dark/location.svg"
        },
        "category": "Bookmarks"
      },
      {
        "command": "bookmarks.quickJumpTo",
        "title": "Quickly jump to bookmark",
        "icon": "$(bookmark)",
        "category": "Bookmarks"
      }
    ],
    "views": {
      "bookmarks": [
        {
          "id": "bookmarks",
          "name": "Bookmarks",
          "icon": "resources/logo.svg",
          "contextualTitle": "Bookmarks"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "bookmarks",
        "contents": "Add some bookmarks"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bookmarks",
          "title": "Bookmarks",
          "icon": "resources/logo.svg"
        }
      ],
      "panel": [
        {
          "id": "bookmarks",
          "title": "Bookmarks",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "configuration": {
      "title": "bookmarks",
      "properties": {
        "bookmarks.showGutterInOverviewRuler": {
          "type": "boolean",
          "description": "Whether to display the corresponding position of the bookmark on the overview ruler",
          "default": false
        },
        "bookmarks.alwaysUseDefaultColor": {
          "type": "boolean",
          "description": "一直使用默认的颜色装饰书签图标",
          "default": false
        },
        "bookmarks.onlyShowFilename": {
          "type": "boolean",
          "description": "Whether to display only the file name where the bookmark is located. Otherwise, display the name of the file where the bookmark is located.",
          "default": false
        },
        "bookmarks.showTextDecoration": {
          "type": "boolean",
          "description": "Whether to display the text decoration of the bookmark's location",
          "default": true
        },
        "bookmarks.showGutterIcon": {
          "type": "boolean",
          "description": "Whether to display the gutter icon of the bookmark",
          "default": true
        },
        "bookmarks.highlightBackground": {
          "type": "boolean",
          "description": "使用书签颜色高亮书签所在区域或行的背景色",
          "default": false
        },
        "bookmarks.showBorder": {
          "type": "boolean",
          "description": "显示书签边框(Border)",
          "default": false
        },
        "bookmarks.border": {
          "type": "string",
          "description": "自定义边框样式. 注意: 边框颜色默认为书签颜色",
          "default": ""
        },
        "bookmarks.showOutline": {
          "type": "boolean",
          "description": "显示书签轮廓(Outline)",
          "default": false
        },
        "bookmarks.outline": {
          "type": "string",
          "description": "自定义轮廓样式. 注意: 轮廓颜色默认为书签颜色",
          "default": ""
        },
        "bookmarks.isWholeLine": {
          "type": "boolean",
          "description": "是否选择整行",
          "default": false
        },
        "bookmarks.textDecorationLine": {
          "type": "string",
          "description": "设置使用的装饰类型，例如 `underline` 或者 `line-through`。",
          "default": "underline"
        },
        "bookmarks.textDecorationStyle": {
          "type": "string",
          "description": "设置装饰的线条的颜色，例如 `solid`、`wavy` 或者 `dashed`。",
          "default": "wavy"
        },
        "bookmarks.textDecorationThickness": {
          "type": "string",
          "description": "设置用于装饰的线条粗细",
          "default": "auto"
        },
        "bookmarks.fontWeight": {
          "type": "string",
          "default": "bold",
          "enum": [
            "normal",
            "bold",
            "bolder",
            "unset"
          ]
        },
        "bookmarks.colors": {
          "type": "object",
          "description": "Custom bookmark color, object format: {\" name\": \"value\"}",
          "additionalProperties": {
            "type": "string"
          }
        },
        "bookmarks.defaultBookmarkIconColor": {
          "type": "string",
          "description": "The default color of bookmark icon.",
          "default": "#0e69d8"
        }
      }
    },
    "configurationDefaults": {
      "bookmarks.colors": {
        "red": "red",
        "green": "green",
        "blue": "blue",
        "white": "white",
        "yellow": "yellow",
        "orange": "orange",
        "purple": "purple",
        "black": "black"
      }
    },
    "menus": {
      "editor/context": [
        {
          "submenu": "bookmarks",
          "group": "z_commands"
        }
      ],
      "editor/lineNumber/context": [
        {
          "submenu": "bookmarks"
        }
      ],
      "bookmarks": [
        {
          "command": "bookmarks.toggleLineBookmark",
          "group": "bookmarksActionsGroup@1"
        },
        {
          "command": "bookmarks.toggleBookmarkWithSelections",
          "group": "bookmarksActionsGroup@2"
        },
        {
          "command": "bookmarks.editLabel",
          "group": "bookmarksEditActionGroup@1"
        },
        {
          "command": "bookmarks.changeBookmarkColor",
          "group": "bookmarksEditActionGroup@2"
        },
        {
          "command": "bookmarks.bookmarkEditDescription",
          "group": "bookmarksEditActionGroup@3"
        },
        {
          "command": "bookmarks.deleteBookmark",
          "group": "bookmarksEditActionGroup@4"
        }
      ],
      "view/title": [
        {
          "command": "bookmarks.clearAllBookmarks",
          "when": "view == bookmarks",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "bookmarks.gotoSourceLocation",
          "when": "view == bookmarks && viewItem === item",
          "group": "inline@1"
        },
        {
          "command": "bookmarks.editLabel",
          "when": "view==bookmarks && viewItem === item",
          "group": "inline@2"
        },
        {
          "command": "bookmarks.deleteBookmark",
          "when": "view==bookmarks && viewItem === item",
          "group": "inline@3"
        },
        {
          "command": "bookmarks.clearAllBookmarks",
          "when": "view == bookmarks && viewItem === file",
          "group": "inline@2"
        },
        {
          "command": "bookmarks.bookmarkEditDescription",
          "when": "view==bookmarks && viewItem === item",
          "group": "itemContextGroup@1"
        },
        {
          "command": "bookmarks.changeBookmarkColor",
          "when": "view==bookmarks && viewItem === item",
          "group": "itemContextGroup@2"
        }
      ]
    },
    "submenus": [
      {
        "id": "bookmarks",
        "label": "Bookmarks"
      }
    ],
    "keybindings": {
      "command": "bookmarks.focus",
      "key": "ctrl+m ctrl+b",
      "mac": "cmd+m cmd+b"
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.14.199",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/uuid": "^9.0.4",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
  }
}
